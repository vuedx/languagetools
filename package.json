{
  "private": true,
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "test": "jest",
    "coverage": "nyc --reporter=json --reporter=text-summary jest --coverage",
    "build": "rollup -c",
    "build:dev": "rollup -c --environment BUILD:development",
    "build:types": "rollup -c --environment BUILD:development,KIND:type",
    "watch": "run-p -l watch:*",
    "watch:bundle": "rollup -c --environment BUILD:development,KIND:bundle --watch",
    "watch:vscode-vue": "pnpm recursive --filter ./extensions/vscode-vue/ run watch",
    "watch:vscode-vlf": "pnpm recursive --filter ./extensions/vscode-vue-language-features/ run watch",
    "watch:standalone": "pnpm recursive --filter @vuedx/typescript-standalone run watch",
    "ci:build": "node scripts/build",
    "eslint:check": "eslint --cache .",
    "eslint:fix": "eslint --cache --fix .",
    "release": "run-s release:*",
    "release:changeset": "changeset version",
    "release:generate-docs": "node scripts/docgen",
    "pr": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.13.1",
    "@microsoft/api-extractor": "^7.12.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^13.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "builtin-modules": "^3.1.0",
    "doctrine": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "fast-glob": "^3.2.4",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-expect-message": "^1.0.2",
    "lint-staged": "^10.4.2",
    "magic-string": "^0.25.7",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rollup": "^2.32.0",
    "rollup-plugin-dts": "^1.4.14",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^2.1.2"
  },
  "version": "0.2.4-0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
